<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background2"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".Result">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:padding="20dp"
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTotalQuestionsR"
            android:textSize="35sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Quesions : " />

        <TextView
            android:id="@+id/txtCoinsR"
            android:textSize="35sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coins : " />

        <TextView
            android:id="@+id/txtCorrectR"
            android:textSize="35sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correct : " />

        <TextView
            android:id="@+id/txtWrongR"
            android:textSize="35sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wrong : " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_PlayAgainR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="@color/buttonBG"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="22sp"
                android:padding="20dp"
                android:textAllCaps="false"
                android:text="Play Again" />

            <Button
                android:id="@+id/bt_PlayScreenR"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:background="@color/buttonBG"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="22sp"
                android:layout_marginLeft="10dp"
                android:padding="20dp"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Play Screen" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>